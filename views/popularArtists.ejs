                                                    <a href="/songs/<%= song.name %>" class="inline-block bg-purple-50 hover:bg-purple-100 text-purple-700 text-xs px-2 py-1 rounded-full transition-colors">
                                                        <%= song.ori_name || song.name %> (<%= song.views.toLocaleString() %>)
                                                    </a>
